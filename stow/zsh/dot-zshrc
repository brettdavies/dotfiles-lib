plugins=(git zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# History configuration
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history

# History options: ignore duplicates, ignore commands starting with space, add timestamps
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_FIND_NO_DUPS
setopt HIST_REDUCE_BLANKS
setopt HIST_VERIFY
setopt SHARE_HISTORY
setopt APPEND_HISTORY
setopt EXTENDED_HISTORY

# Modern history options (zsh 5.0.8+)
# Use fcntl for history locking (better performance and reliability)
if [[ "${ZSH_VERSION%%.*}" -ge 5 ]] && [[ "${ZSH_VERSION#*.}" =~ ^[0-9]+ ]] && [[ "${ZSH_VERSION#*.}" -ge 8 ]]; then
    setopt HIST_FCNTL_LOCK
fi

# Better word splitting in history (zsh 5.0+)
setopt HIST_LEX_WORDS

# Don't store history command itself in history
setopt HIST_NO_STORE

# History filtering: only save successful commands (exit code 0)
# Store commands temporarily and only add successful ones to history
_PENDING_HIST_CMD=""

# Prevent all commands from being added automatically
zshaddhistory() {
    # Store the command temporarily
    _PENDING_HIST_CMD="$1"
    # Don't add to history yet - we'll add it in precmd if it succeeds
    return 1  # Prevent automatic addition
}

# After command execution, add to history only if it succeeded
_add_successful_cmd() {
    local exit_code=$?
    
    # If command succeeded and we have a pending command, add it to history
    if [[ $exit_code -eq 0 && -n "$_PENDING_HIST_CMD" ]]; then
        # Add the command to history manually
        print -s "$_PENDING_HIST_CMD"
    fi
    # Clear pending command
    _PENDING_HIST_CMD=""
}

# Add hook
autoload -Uz add-zsh-hook
add-zsh-hook precmd _add_successful_cmd

# OSC 7 support: Report current directory to terminal (for better terminal integration)
# This allows terminals like Ghostty to track the current working directory
# Format: \033]7;file://hostname/path\033\\
_precmd_osc7() {
    printf '\033]7;file://%s%s\033\\' "${HOST:-localhost}" "$PWD"
}
add-zsh-hook precmd _precmd_osc7

