# Load zsh modules for enhanced functionality
# zsh/parameter: Advanced parameter expansion
zmodload zsh/parameter 2>/dev/null

# zsh/datetime: Date/time functions
zmodload zsh/datetime 2>/dev/null

# zsh/files: Built-in file operations (optional, for performance)
zmodload -F zsh/files b:zf_ln b:zf_mkdir b:zf_rm b:zf_chmod 2>/dev/null || zmodload zsh/files 2>/dev/null

# Completion configuration - optimized with caching
# Add zsh-completions to fpath (macOS Homebrew only)
if [[ "$OSTYPE" == "darwin"* ]] && type brew &>/dev/null; then
    FPATH=$(brew --prefix)/share/zsh-completions:$FPATH
fi

# Docker completions
fpath=($HOME/.docker/completions $fpath)

# Create completion cache directory if it doesn't exist
[[ ! -d ~/.zsh/cache ]] && mkdir -p ~/.zsh/cache

# Optimize compinit: only rebuild cache if needed (checks daily)
# Use OS-agnostic stat command
autoload -Uz compinit
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS uses stat -f
    if [[ ! -s ~/.zcompdump ]] || (( $(($(date +%s) - $(stat -f %m ~/.zcompdump 2>/dev/null || echo 0))) > 86400 )); then
        compinit -d ~/.zsh/cache/zcompdump
    else
        compinit -C -d ~/.zsh/cache/zcompdump
    fi
else
    # Linux uses stat -c
    if [[ ! -s ~/.zcompdump ]] || (( $(($(date +%s) - $(stat -c %Y ~/.zcompdump 2>/dev/null || echo 0))) > 86400 )); then
        compinit -d ~/.zsh/cache/zcompdump
    else
        compinit -C -d ~/.zsh/cache/zcompdump
    fi
fi

# Additional completion settings
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'  # Case insensitive
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}       # Colored completion
zstyle ':completion:*' menu select                         # Menu selection
zstyle ':completion:*' special-dirs true                    # Complete . and ..
zstyle ':completion:*' rehash true                          # Rehash on completion

# Enable completion caching for better performance
zstyle ':completion:*' use-cache yes
zstyle ':completion:*' cache-path ~/.zsh/cache

