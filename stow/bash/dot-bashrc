# ~/.bashrc

# Source .profile if it exists
# This also sets up Homebrew PATH for all shells
if [ -f "$HOME/.profile" ]; then
    . "$HOME/.profile"
fi

# Source shared shell functions
if [ -f "$HOME/.shell-functions" ]; then
    . "$HOME/.shell-functions"
fi

# OSC 7 support: Report current directory to terminal (for better terminal integration)
# Uses shared function from .shell-functions
_osc7_prompt_command() {
    _osc7_report_directory
}
# Add to PROMPT_COMMAND if not already present
if [[ "$PROMPT_COMMAND" != *"_osc7_prompt_command"* ]]; then
    PROMPT_COMMAND="_osc7_prompt_command${PROMPT_COMMAND:+; $PROMPT_COMMAND}"
fi
